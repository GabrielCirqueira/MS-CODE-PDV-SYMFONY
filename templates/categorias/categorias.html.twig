{% extends 'layout.html.twig' %}

{% block title %}Categorias{% endblock %}

{% block body %}
<div class="container py-5 container-table container-margin">
    <div class="mb-4 d-flex justify-content-between align-items-center">
        <h1>Categorias</h1>
        <div>
            <a href="{{ path('addCategoria') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nova Categoria
            </a>
        </div>
    </div>

    {% include 'flash.html.twig' %}

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="titulo-tabela" scope="col">Id</th>
                <th class="titulo-tabela" scope="col">Nome</th>
                <th class="titulo-tabela text-end" scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for categoria in categorias %}
                <tr>
                    <td data-label="Id">{{ categoria.id }}</td>
                    <td data-label="Nome">{{ categoria.nome }}</td>
                    <td data-label="Ações" class="text-end">
                        <a href="{{ path('editarCategoria',{'id': categoria.id})}}" class="btn btn-secondary btn-sm btn-action">
                            <i class="fas fa-edit"></i>
                        </a> 
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
