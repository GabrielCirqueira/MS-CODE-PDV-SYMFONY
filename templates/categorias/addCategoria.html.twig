{% extends 'layout.html.twig' %}

{% block title %}Adicionar Categoria{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="container-categoria">
        <div class="mb-4 text-center">
            {% if modo == "adicionar" %}
            <h1><i class="fas fa-folder-plus"></i> Nova Categoria</h1>
            {% else %}
            <h1><i class="fas fa-edit"></i> Editar Categoria</h1>
            {% endif %}
        </div>

        <form method="POST" action="{{ path(modo == 'adicionar' ? 'app_RegistrarCategoria' : 'app_editarCategoriaRegistrar') }}">
            <div class="mb-3">
                <label for="id" class="form-label">ID:</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-id-badge"></i>
                    </span>
                    <input type="text" name="id" class="form-control" id="id" readonly value="{{modo == 'adicionar' ? '0' : id}}">
                </div>
            </div>

            <div class="mb-3">
                <label for="nome" class="form-label">Nome da Categoria:</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-tag"></i>
                    </span>
                    <input type="text" value="{{modo == 'adicionar' ? '' : nome}}" name="nome" class="form-control" id="nome" placeholder="Digite o nome da categoria" required>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('registarCategoria') }}">

            {% include 'flash.html.twig' %}

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Salvar
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
