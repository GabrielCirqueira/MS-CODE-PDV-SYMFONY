{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}


    <main class="container-login d-flex flex-column justify-content-center align-items-center vh-100">
        <div class="form-signin text-center w-100 m-auto p-4 rounded  bg-white">
            <form method="post">

                <a href="#"
                class="titulo-login">
                <img class="me-2" src="{{asset('img/cart.png')}}" width="53" alt="Logotipo">
                <span class="fs-5 fw-bold">MS Code - Estoque</span>
            </a>

             <div class="mb-2">
                 <input type="email" value="" name="email" id="username" placeholder="name@example.com"  autocomplete="email" required autofocus>
             </div>  

             <div class="mb-3">
                 <input type="password" name="senha" id="password" placeholder="Senha" autocomplete="current-password" required>
             </div>

             {% include 'flash.html.twig' %}

             <input type="hidden" name="_csrf_token" value="{{ csrf_token('logar') }}">
             <button class="btn btn-primary w-100 py-2 mb-3" type="submit">Acessar</button>
             <a href="{{path('register')}}" class="btn btn-outline-secondary w-100">Cadastrar</a>
         </form>
        </div>
        
    </main>      
{% endblock %}
