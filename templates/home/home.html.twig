{% extends 'layout.html.twig' %}

{% block title %}Página Inicial{% endblock %}

{% block body %}
<div class="main-container d-flex justify-content-center">
    <div class="mt-5">
        <section class="welcome-section text-center">
            <h1 class="welcome-heading">
                <i class="fas fa-boxes"></i> Bem-vindo, {{ app.user.nome }}!
            </h1>
            <p class="system-description">
                Este é o <strong>Sistema de Estoque</strong>, projetado para facilitar a gestão e organização dos seus produtos.
            </p>
        </section>

        <hr class="divider">

        <section class="features-section mt-4">
            <h2 class="features-heading text-center mb-4">
                <i class="fas fa-tools"></i> Recursos disponíveis
            </h2>
            <ul class="features-list d-flex flex-wrap justify-content-center">
                <li class="feature-item">
                    <i class="fas fa-box-open feature-icon"></i>
                    <span class="feature-text">Gerencie Produtos</span>
                </li>
                <li class="feature-item">
                    <i class="fas fa-th-large feature-icon"></i>
                    <span class="feature-text">Categorias Organizadas</span>
                </li>
                <li class="feature-item">
                    <i class="fas fa-chart-line feature-icon"></i>
                    <span class="feature-text">Acompanhe Vendas</span>
                </li>
                <li class="feature-item">
                    <i class="fas fa-users feature-icon"></i>
                    <span class="feature-text">Gerencie Usuários</span>
                </li>
            </ul>
        </section>
    </div>
</div>

{% endblock %}
