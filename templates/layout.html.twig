{% extends 'base.html.twig' %}

{% block header %}
<div class="border-bottom mb-2 bg-white shadow-sm header-custom">
    <div class="container">
        <header class="d-flex flex-wrap justify-content-between align-items-center py-3">
            <a href="{{path('app_home')}}" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
                <img class="me-3 logo" src="{{asset('img/cart.png')}}" width="50" alt="Logotipo">
                <span class="fs-4 fw-bold site-title">MS CODE - Estoque</span>
            </a>

            <ul class="nav">
                <li class="nav-item">
                    <a href="{{ path('app_home') }}" class="nav-link {{ app.request.attributes.get('_route') == 'app_home' ? 'active' : '' }}">Início</a>
                </li>
                <li class="nav-item">
                    <a href="{{path('app_Vendas')}}" class="nav-link {{ app.request.attributes.get('_route') == 'app_Vendas' ? 'active' : '' }}">Vendas</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_produtos') }}" class="nav-link {{ app.request.attributes.get('_route') == 'app_produtos' ? 'active' : '' }}">Produtos</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_categorias') }}" class="nav-link {{ app.request.attributes.get('_route') == 'app_categorias' ? 'active' : '' }}">Categorias</a>
                </li>
                
                <li class="nav-item">
                    <a data-bs-toggle="offcanvas" href="#offcanvasRight" role="button" aria-controls="offcanvasRight">
                        <i class="fas fa-user-circle fa-2x user-icon"></i>
                    </a>
                </li>
            </ul>
        </header>
    </div>
</div>
{% endblock %}
 
{% block menu %}

<div class="offcanvas offcanvas-end" style="width: 250px;" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header bg-light text-dark border-bottom">
        <h5 id="offcanvasRightLabel" class="mb-0"><i class="fas fa-user-cog me-2"></i>Painel de Usuário</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>

    <div class="offcanvas-body p-3 d-flex flex-column">
 
        <div class="user-info text-center mb-4">
            <i class="fas fa-user-circle fa-4x mb-2 text-primary"></i>
            <h6 class="mb-0">{{ app.user.nome }}</h6>
            <p class="text-muted mb-2">{{ app.user.email }}</p>
        </div>
 
        <div class="mt-auto">
            <a href="{{ path('app_logout') }}" class="btn btn-outline-danger w-100 d-flex align-items-center justify-content-center">
                <i class="fas fa-sign-out-alt me-2"></i> Sair
            </a>
        </div>
    </div>
</div>


{% endblock %}


