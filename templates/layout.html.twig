{% extends 'base.html.twig' %}

{% block header %}
 <div class="border-bottom mb-2 bg-white shadow-sm header-custom fixed-top fixed-custom">
    <div class="container">
      <header>
  <nav class="navbar navbar-expand-lg justify-content-center">
    <div class="container-fluid">
      <!-- Logo -->

      <a href="{{path('home')}}" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
        <img class="me-3 logo" src="{{asset('img/cart.png')}}" width="50" alt="Logotipo">
        <span class="fs-4 fw-bold site-title">Ms Code - PDV</span>
    </a>

      <!-- Botão para expandir/colapsar o menu -->

        <button class="menu-btn navbar-toggler button-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Alternar navegação" onclick="toggleMenu(this)">
    <span></span>
    <span></span>
    <span></span>
  </button>

  

      <!-- Links do menu -->
      <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
     
        <ul class="navbar-nav ms-auto navbar justify-content-center">
          <li class="nav-item">
                    <a href="{{ path('home') }}" class="nav-link {{ app.request.attributes.get('_route') == 'home' ? 'active' : '' }}">Início</a>
                </li>
                <li class="nav-item">
                    <a href="{{path('clientes')}}" class="nav-link links {{ app.request.attributes.get('_route') == 'clientes' ? 'active' : '' }}">Clientes</a>
                </li>
              
                <li class="nav-item">
                <a href="{{ path('carrinho') }}" class="nav-link links {{ app.request.attributes.get('_route') == 'carrinho' ? 'active' : '' }}">Carrinho</a>
                </li>

                <li  data-bs-toggle="offcanvas" href="#offcanvasRight" role="button" aria-controls="offcanvasRight" class="nav-link links LogOut">
                <a href=""></a  data-bs-toggle="offcanvas" href="#offcanvasRight" role="button" aria-controls="offcanvasRight" class="some">Log Out</li>
        </ul>
  <a data-bs-toggle="offcanvas" href="#offcanvasRight" role="button" aria-controls="offcanvasRight" class="some">
        <i class="fas fa-user-circle fa-2x user-icon"></i>
     </a>
      </div>
      
    </div>
  </nav>
</header>
</div>
</div>

{% endblock %}
 
{% block menu %}

<div class="offcanvas offcanvas-end" style="width: 250px;" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header bg-light text-dark border-bottom">
        <h5 id="offcanvasRightLabel" class="mb-0"><i class="fas fa-user-cog me-2"></i>Painel de Usuário</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>

    <div class="offcanvas-body p-3 d-flex flex-column">
 
        <div class="user-info text-center mb-4">
            <i class="fas fa-user-circle fa-4x mb-2 text-primary"></i>
            <h6 class="mb-0">{{ app.user.nome }}</h6>
            <p class="text-muted mb-2">{{ app.user.email }}</p>
        </div>
 
        <div class="mt-auto">
            <a href="{{ path('logout') }}" class="btn btn-outline-danger w-100 d-flex align-items-center justify-content-center">
                <i class="fas fa-sign-out-alt me-2"></i> Sair
            </a>
        </div>
    </div>
</div>

<script>
function toggleMenu(button) {
      // Alterna a classe 'open' no botão e no menu
      button.classList.toggle('open');
      document.getElementById('menu').classList.toggle('open');
    }
</script>


{% endblock %}


