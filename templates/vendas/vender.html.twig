{% extends 'layout.html.twig' %}

{% block title %}Página de Vendas{% endblock %}

{% block body %}

<div class="container py-5 main">

  <div class="container-produtos">

    <div class="mb-4 text-center">
      <h1><i class="fas fa-shopping-cart"></i> Página de Vendas</h1>
    </div>
    {% include 'flash.html.twig' %}

    <div class="w-100 mt-2">
      <form method="POST" action="{{ path('vendaRegistrar', {'id': id}) }}">

        <div class="mb-3">
          <label for="nomeProduto" class="form-label">Nome do Produto:</label>
          <div class="input-group">
            <span class="input-group-text">
              <i class="fas fa-box"></i>
            </span>
            <input type="text" value="{{nomeProduto}}" class="form-control" id="nomeProduto" name="nomeProduto" readonly style="background-color: #f0f0f0; color: #6c757d;">
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="categoriaProduto" class="form-label">Categoria:</label>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-tags"></i>
                </span>
                <input type="text" value="{{categoriaProduto.nome}}" class="form-control" id="categoriaProduto" name="categoriaProduto" readonly style="background-color: #f0f0f0; color: #6c757d;">
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="mb-3">
              <label for="valorProduto" class="form-label">Valor:</label>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-dollar-sign"></i>
                </span>
                <input type="text" value="{{valorProduto}}" class="form-control" id="valorProduto" name="valorProduto" readonly style="background-color: #f0f0f0; color: #6c757d;">
              </div>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="nomeComprador" class="form-label">Nome do Comprador:</label>
          <div class="input-group">
            <span class="input-group-text">
              <i class="fas fa-user"></i>
            </span>
            <input type="text" class="form-control" id="nomeComprador" name="nomeComprador" placeholder="Digite o nome do comprador">
          </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('vendaRegistrar') }}">

        <button type="submit" class="btn btn-primary">Finalizar Venda</button>
      </form>
    </div>
  </div>
</div>

{% endblock %}
