{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<main class="form-signin text-center w-100 m-auto p-4 rounded shadow-sm bg-white">
    <form method="post">
        <div class="mb-4">
            <h1 class="h3 fw-bold">MS Code - Registro</h1>
        </div>

        <div class="form-floating mb-3">
            <input type="text" name="nome" id="nome" placeholder="Nome" required autofocus class="form-control">
            <label for="nome">Nome</label>
        </div>
        <div class="form-floating mb-3">
            <input type="email" name="email" id="email" placeholder="nome@example.com" required autofocus class="form-control">
            <label for="email">Email</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" name="password" id="password" placeholder="Senha" required class="form-control">
            <label for="password">Senha</label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('registrar') }}">
        <button class="btn btn-primary w-100 py-2 mb-3" type="submit">Registrar</button>
        <a href="{{ path('app_login') }}" class="btn btn-outline-secondary w-100">JÃ¡ tem uma conta? Logar</a>
    </form>
</main>
{% endblock %}
