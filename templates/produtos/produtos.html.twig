{% extends 'layout.html.twig' %}

{% block title %}Produtos{% endblock %} 

{% block body %}
<div class="container-margin tema-card"></div>
<div class="container py-5 main container-table">
    <div class="mb-4 d-flex flex-row justify-content-between">
      <h1>Produtos</h1>
      <div>
        <a href="{{path('adicionarProdutos')}}" class="btn btn-primary"><i class="bi bi-plus"></i>Novo produto</a>
      </div>
    </div>
    {% include 'flash.html.twig' %}

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Descrição</th>
          <th scope="col">Categoria</th>
          <th scope="col">Valor</th>
          <th scope="col">Qtd. Disponível</th>
          <th scope="col-2 text-align-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for produto in produtos %}
          <tr>
            <td data-label="nome">{{ produto.nome }}</td>
            <td data-label="descricao">{{ produto.descricao }}</td>
            <td data-label="categoria">{{ produto.categoriaId.nome }}</td>
            <td data-label="valor">R$ {{ produto.valorUnitario }},00 </td>
            <td data-label="quantidade">{{ produto.quantidade }} Disponiveis</td>
            <td>
              <a href="{{path('venderProduto',{'id': produto.id})}}" class="btn btn-warning btn-sm">
                Vender
              </a>
              <a href="{{path('aumentarQuantidadeProduto',{'id': produto.id})}}"class="btn btn-sm" style="background-color: #16c1aa;" ><i class="fas fa-plus"></i></a>
              
              <a href="{{path('editarProduto',{'id': produto.id})}}" class="btn btn-secondary btn-sm"><i class="fas fa-edit"></i></a>
              <a href="{{path('excluirProduto',{'id': produto.id, 'nome': produto.nome})}}" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

{% endblock %}
