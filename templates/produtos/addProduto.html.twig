{% extends 'layout.html.twig' %}

{% block title %}{{modo == "adicionar" ? "Adicionar Produto" : "Editar Produto"}}{% endblock %}

{% block body %}

<div class="container py-5 main">


  <div class="container-produtos">

    <div class="mb-4 text-center">
      <h1><i class="fas fa-edit"></i>{{modo == 'adicionar' ? 'Novo Produto' : 'Editar Produto'}}</h1>
    </div>
    {% include 'flash.html.twig' %}

    <div class="w-100 mt-2">
      <form method="POST" action="{{ path(modo == 'adicionar' ? 'app_registrarProdutos' : 'app_editarProdutoRegistrar') }}">
        <div class="mb-3">
          <label for="nome" class="form-label">Nome:</label>
          <div class="input-group">
            <span class="input-group-text">
              <i class="fas fa-box"></i>
            </span>
            <input type="text" value="{{modo == 'adicionar' ? '' : produto.nome}}" class="form-control" id="nome" name="nome">
          </div>
        </div>
        <div class="mb-3">
          <label for="descricao" class="form-label">Descrição:</label>
          <textarea class="form-control" id="descricao" name="descricao" style="resize:none;" rows="5">{{modo == 'adicionar' ? '' : produto.descricao}}</textarea>
        </div>


        <div class="row">

          <div class="mb-3 col-4">
            <label for="categoriaId" class="form-label">Categoria:</label>
            <div class="input-group">
              <span class="input-group-text">
                <i class="fas fa-tags"></i>
              </span>
              <select name="categoria" class="form-select" id="categoriaId" aria-label="Default select example">
                {% for categoria in categorias %}
                <option value="{{categoria.nome}}"  {{ modo == 'editar' and categoria.nome == produto.categoria ? 'selected' : '' }}>
                  {{categoria.nome}}
                </option>
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="mb-3 col-4">
            <label for="quantidade" class="form-label">Quantidade:</label>
            <div class="input-group">
              <span class="input-group-text">
                <i class="fas fa-boxes"></i>
              </span>
              <input type="number" value="{{modo == 'adicionar' ? '' : produto.quantidade}}" class="form-control" id="quantidade" name="quantidade">
            </div>
          </div>
          <div class="mb-3 col-4">
            <label for="valor" class="form-label">Valor:</label>
            <div class="input-group">
              <span class="input-group-text">
                <i class="fas fa-dollar-sign"></i>
              </span>
            <input type="text" value="{{modo == 'adicionar' ? '' : produto.valor}}" class="form-control" id="valor" name="valor">
            </div>
          </div>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('addProduto') }}">
        
        {% if modo == 'editar' %}
          <input type="hidden" name="id" value="{{id}}">
        {% endif %}        
        
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>
    </div>
  </div>
</div>

{% endblock %}